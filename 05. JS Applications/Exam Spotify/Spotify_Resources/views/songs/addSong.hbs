<section id="createSongView">
    <div class="background-spotify">
        <div class="song-container">
            <h1>Create new song</h1>
            <form action="#/addSong" id="addSongForm" method="POST">
                <div class="form-group">
                    <label for="title" class="white-labels">Title</label>
                    <input id="title" type="text" name="title" class="form-control" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="artist" class="white-labels">Artist</label>
                    <input id="artist" type="text" name="artist" class="form-control" placeholder="Artist">
                </div>
                <div class="form-group">
                    <label for="imageURL" class="white-labels">imageURL</label>
                    <input id="imageURL" type="text" name="imageURL" class="form-control" placeholder="imageURL">
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</section>

<script>
    $('#addSongForm').on('submit',function (event) {
        if ($('#title').val()<6){
            notification.error("Error: The title must be at least 6 symbols long!")
            event.preventDefault();
            event.stopPropagation();
        }
        if ($('#artist').val()<3){
            notification.error("Error: The artist must be at least 3 symbols long!")
            event.preventDefault();
            event.stopPropagation();
        }
        let imageUrl = $('#imageURL').val();
        let regex = /$www|http:\/\/|https:\/\//;
        if (!regex.test(imageUrl)){
            notification.error("Error: The image must start with http:// or https://")
            event.preventDefault();
            event.stopPropagation();
        }
    })
</script>